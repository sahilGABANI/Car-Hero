<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_20sdp"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/viewUpper"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bg_bottom_sheet_top_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Are you sure want to delete this\nvehicle form list?"
        android:textColor="@color/black"
        android:fontFamily="@font/jakarta_medium"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_8sdp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FDEEF3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10ssp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/jakarta_semi_bold"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:minHeight="@dimen/_48sdp"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text="Yes, delete"
        android:textColor="#BA001C"
        android:textAllCaps="false"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="@dimen/_8sdp"
        app:iconGravity="textEnd" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#E6F2FE"
        android:layout_marginBottom="@dimen/_10ssp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/jakarta_semi_bold"
        android:gravity="center"
        android:minHeight="@dimen/_48sdp"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text="Cancel"
        android:textColor="#027DFF"
        android:textAllCaps="false"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="@dimen/_8sdp"
        app:iconGravity="textEnd" />

</LinearLayout>